[Unit]
Description=Get WH1080 data from Rtl433
After=network.target

[Service]
ExecStart=/usr/local/bin/rtl_433  -c WORKINGDIR/rtl_433.conf 
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target

